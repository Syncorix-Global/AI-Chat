{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"],
      "@interactions/*": ["src/interactions/*"],
      "@typingObserver/*": ["src/interactions/typingObserver/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src", "tests"]
}
